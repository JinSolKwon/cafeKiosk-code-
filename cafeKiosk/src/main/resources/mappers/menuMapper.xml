<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="menuJSDao">
	
	<!-- 메뉴 수 가져오기 -->
	<select id="countMenu" parameterType="hashmap" resultType="int">
		select count(*)	
			from MENU A
		<choose>
			<when test='(type!=null or !type.equals("")) and (menu!=null or !menu.equals(""))'>
				,
					 (select * from CATEGORY where type like '%' || #{type} || '%') B
					 where A.category_num=B.num
		  			and MENU like '%' || #{menu} || '%'
			</when>
			<otherwise></otherwise>
		</choose>
	</select>
	
	<!-- 메뉴 목록 가져오기 -->
	<select id="menuList" parameterType="hashmap" resultType="menuJSVo">
		select
		    *
		from(
		        select
		            ROWNUM,
		            a.menu_num, 
		            a.CATEGORY_NUM, 
		            a.MENU,   
		            a.PRICE, 
		            a.REGDATE, 
		            a.USING,
		            b.type,
		            b.category
		        from
		            (select
		                num as menu_num,
		                category_num,
		                menu,
		                price,
		                regdate,
		                using
		             from
		                menu
		             where
		                num > 0
		                <if test='menu!=null or !menu.equals("")'>
				  		and MENU like '%' || #{menu} ||'%'
				  	 	</if>
		            )A,
		            (select
		                num as category_num,
		                type,
		                category
		            from 
		                category
		            where
		                num > 0
		                <if test='type!=null or !type.equals("")'>
					  	and TYPE = #{type}
					  	</if>
		            )B
		        where
		            b.category_num = a.category_num
		            <![CDATA[and ROWNUM >= #{start} and ROWNUM <= #{end} ]]>
		        )C,
		        menu_image D
		where
		    c.MENU = D.MENU (+)
		order by
		    menu_num asc;
	
